/* pages/eval/index.wxss */
.eval {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 0;
    border-top: 1rpx solid #ccc;
}
.evalFl {
    flex: 1;
}
.evalFl image {
    display: block;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border:1px solid red;
    margin: 0 auto;
}

.evalFr {
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    align-content: center;
    font-size: 24rpx;
}