/* pages/index/goodsList.wxss */

.topSearch {
    position: relative;
    width: 100%;
    padding: 20rpx 0;
    background-color: #eee;
}

.topSearch navigator {
    width: 700rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 0 auto;
    border-radius: 8rpx;
    background-color: #fff;
    font-size: 28rpx;
    color: #999;
    text-align: center;
}

.topSearch icon {
    position: absolute;
    left: 310rpx;
    top: 38rpx;
    z-index: 9;
}

.filter {
    display: flex;
    justify-content: space-around;
    align-items: center;
    align-content: center;
    font-size: 24rpx;
}

.filterChoose view {
    position: relative;
    width: 320rpx;
    padding: 10rpx 0;
    text-align: center;
    color: #999;
    background-color: #fff;
}

.filterChoose view::after {
    position: absolute;
    content: '';
    right: 84rpx;
    top: 18rpx;
    width: 10rpx;
    height: 10rpx;
    border-right: 1rpx solid #999;
    border-top: 1rpx solid #999;
    transform: rotate(-225deg);
}


.list {
    display: flex;
    flex-flow: wrap;
    justify-content: space-between;
    padding: 0 10rpx;
}

.list .tip {
    border-left: 8rpx solid #fd7c28;
    padding-left: 16rpx;
}

.goods {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    background-color: #fff;
    width: 320rpx;
    padding: 20rpx;
    margin: 10rpx 0;
    position: relative;
}

.goods image {
    width: 100%;
    height: 300rpx;
}

.goods .iconLittle {
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    right: 16rpx;
    bottom: 10rpx;
}

.goods .goodsText {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.goods .goodsText text {
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.goodsName {
    font-weight: bold;
    font-size: 26rpx;
}
.hrText {
    text-align: center;
    color: #999;
    margin-top: 40rpx;
}