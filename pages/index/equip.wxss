/* pages/index/goodsList.wxss */

.topSearch {
    position: relative;
    width: 100%;
    padding: 20rpx 0;
    background-color: #eee;
}

.topSearch navigator {
    width: 700rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 0 auto;
    border-radius: 8rpx;
    background-color: #fff;
    font-size: 28rpx;
    color: #999;
    text-align: center;
}

.topSearch icon {
    position: absolute;
    left: 310rpx;
    top: 38rpx;
    z-index: 9;
}

.banner {
    background-color: #fff;
}


.banner navigator {
    display: block;
    width: 100%;
    height: auto;
}
.banner image {
    display: block;
    width: 100%;
}

.menu {
    display: flex;
    justify-content: space-between;
    align-content: center;
    align-items: center;
    background-color: #fff;
    overflow: scroll;
    margin-top: 20rpx;
}
.menu .menuList {
    padding: 14rpx 26rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-content: center;
    align-items: center;
}
.menuList image {
    width: 120rpx;
    height: 120rpx;
    border: 1rpx solid #eee;
    border-radius: 50%;
}
.menuList text {
    color: #808080;
    font-size: 26rpx;
}

.list {
    display: flex;
    flex-flow: wrap;
    justify-content: space-between;
}

.list .tip {
    border-left: 8rpx solid #fd7c28;
    padding-left: 16rpx;
}

.goods {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    background-color: #fff;
    width: 320rpx;
    padding: 20rpx;
    margin-top: 20rpx;
    position: relative;
}

.goods image {
    width: 100%;
    height: 300rpx;
}

.goods .iconLittle {
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    right: 20rpx;
    bottom: 130rpx;
}

.goods .goodsText {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.goods .price {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
}
.goods .price text {
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: red;
}
.goods .price text.tm_price {
    font-size: 20rpx;
    text-decoration: line-through;
    color: #999;
}

.goodsName {
    font-weight: bold;
    font-size: 26rpx;
    height: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
