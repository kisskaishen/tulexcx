<view class='container'>
    <view class='banner'>
        <swiper indicator-dots autoplay interval='3000' duration="1000">
            <block wx:for="{{imgUrls}}" wx:key="{{item}}">
                <swiper-item>
                    <image src='{{item}}'></image>
                </swiper-item>
            </block>
        </swiper>
    </view>

    <view class='goodsInfo'>
        <view class='infoTop'>
            <view class='infoFl'>
                <text class='goodsName'>焦作云台山</text>
                <text>前往时间：2018-03-31</text>
                <text>已报名：10</text>
                <text>剩余人数：10</text>
            </view>
            <view class='infoFr'>
                <text>¥40起</text>
                <navigator url='/pages/pay/index?payType=ticket'>
                    <button type='warn' size='mini'>
                        预订
                    </button>
                </navigator>
            </view>
        </view>
        <view class='infoBottom'>
            <text class="tip">景点介绍</text>
            <text>介绍</text>
        </view>
    </view>

