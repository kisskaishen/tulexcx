/* pages/pay/index.wxss */
.container {
    margin-bottom: 130rpx;
}
.top {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    align-content: center;
    background-color: #fff;
}

.top > view {
    padding: 20rpx;
}

.topImg image {
    width: 200rpx;
    height: 180rpx;
    border: 1rpx solid red;
}

.topInfo {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    align-content: center;
}

.topInfo text {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    padding: 6px 0;
}

.topInfo .name {
    font-size: 30rpx;
}

.topInfo .price {
    color: red;
}

.topInfo .tip {
    text-align: right;
    color: #fd7c28;
}
.tipView {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fd7c28;
    text-align: center;
    font-size: 28rpx;
    padding: 10rpx 0;
}

.userList {
    background-color: #fff;
    padding: 20rpx 0;
}
.userList .listTip {
    font-size: 26rpx;
    padding: 0 20rpx;
}
.userList .list {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
    padding: 20rpx;    
}
.userList .list .userInfoView {
    padding: 10rpx;
    border: 2rpx solid #ccc;
    border-radius: 4rpx;
    margin-right: 20rpx;
    font-size: 26rpx;
}
.userList .list .addUser {
    padding: 10rpx 20px;
    border: 2rpx solid #ccc;
    border-radius: 4rpx;
    margin-right: 20rpx;
    font-size: 26rpx;
}
.userList .list .active {
    border:2rpx solid red;
    color: red;
}
/*  门票信息 */
.userInfo {
    margin-top: 20rpx;
}

.userInfo > view {
    display: flex;
    justify-content: flex-start;
    align-content: center;
    align-items: center;
    padding: 20rpx;
    background-color: #fff;
    font-size: 28rpx;
}

.tipTxt {
    display: block;
    color: #999;
    padding: 10rpx 20rpx;
    font-size: 24rpx;
}

.userInfo label {
    flex: 1;
    color: #999;
}

.userInfo input {
    flex: 3;
    border-bottom: 1rpx solid #eee;
}

.addVisitorBtn {
    padding: 20rpx;
    
}
.addVisitorBtn text {
    display: block;
    text-align: right;
    font-size: 24rpx;
}


.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    z-index: 9;
    border-top: 1rpx solid #ccc;
}

.footerMenu {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    align-content: center;
    height: 120rpx;
}

.footerMenu view {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-content: center;
    font-size: 24rpx;
    color: #515151;
}

.footerMenu view:first-child {
    flex: 2;
}

.footerMenu view:last-child {
    flex: 3;
}

.footerMenu button {
    border-radius: 0;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;    
    border:none;
}

/* 装备模块 */
.equipView {
    
}

.address navigator {
    position: relative;
    display: block;
    width: 100%;
    height: 100%;
    color: #666;
    font-size: 30rpx;
    padding: 40rpx 20rpx;
}

.address navigator::after {
    position: absolute;
    content: '';
    right: 40rpx;
    top: 50%;
    margin-top: -15rpx;
    width: 30rpx;
    height: 30rpx;
    border-right: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    transform: rotate(45deg)
}
.address {
    padding: 20rpx;
    background-color: #fff;
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
}
.address view text {
    margin-right: 40rpx;
    font-size: 30rpx;
    color: #666;
}
.equipView > view {
    margin-top: 20rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-around;
    padding: 10rpx 20rpx;
}

.equipInfo {
    display: flex;
    flex-direction: column;
}
.equipInfo > view {
    flex: 1;
    width: 100%;
    display: flex;
    padding: 16rpx 0;
    justify-content: space-between;
    align-content: center;
    align-items: flex-start;
    border-bottom: 1rpx solid #eee;
}
.equipInfo > view text {
    flex: 1;
    font-size: 28rpx;
    color: #999;
}
.equipInfo > view text:last-child {
    text-align: right;
    color: #666;
}
.equipInfo > view textarea {
    border:1rpx solid #ccc;
    color: #666;
    border-radius: 10rpx;
    width: 480rpx;
    height: 160rpx;
    font-size: 24rpx;
    padding: 20rpx;
}