/* pages/center/index.wxss */

.userinfo {
    position: relative;
    width: 100%;
    height: 400rpx;
}

.userinfo .user_bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 100%;
    height: 100%
}
.userinfoTop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    align-items: center;
    z-index: 9;
}

.userinfo-avatar {
    width: 168rpx;
    height: 168rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #fff;
    text-shadow: 0 8rpx 8rpx #fd7c28;
}

.usermotto {
    margin-top: 200px;
}

.userList {
    margin-top: 20rpx;
    background-color: #fff;
}

.list navigator {
    position: relative;
    display: flex;
    justify-content: flex-start;
    align-content: center;
    align-items: center;
    border-bottom: 1rpx solid #ccc;
    padding: 10rpx 40rpx;
    font-size: 30rpx;
}

.list navigator::after {
    position: absolute;
    content: '';
    right: 40rpx;
    top: 30rpx;
    width: 30rpx;
    height: 30rpx;
    border-right: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    transform: rotate(45deg);
}

.list navigator image {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
}
