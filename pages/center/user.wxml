<!--pages/center/user.wxml-->
<view class='container'>
    <view class='userView'>
        <view class='userInfo'>
            <text class='tipTxt'>基本信息(必填)</text>
            <view class='contact'>
                <view>
                    <label>手机号</label>
                    <input type="number" placeholder='您的手机号'></input>
                </view>
                <view>
                    <label>姓名</label>
                    <input type='text' placeholder='您的真实姓名'></input>
                </view>
                <view>
                    <label>身份证号</label>
                    <input type='text' placeholder='您的身份证号'></input>
                </view>
            </view>
        </view>
        <view class='userInfo'>
            <text class='tipTxt'>紧急联系人(选填)</text>
            <view class='contact'>
                <view>
                    <label>手机号</label>
                    <input type="number" placeholder='手机号'></input>
                </view>
                <view>
                    <label>姓名</label>
                    <input type='text' placeholder='真实姓名'></input>
                </view>
            </view>
        </view>
        <view class='btn'>
            <button type='warn' bindtap='submit'>保存</button>
        </view>
    </view>
</view>