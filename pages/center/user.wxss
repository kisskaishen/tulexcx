/* pages/center/user.wxss */
.userInfo {
    background-color: #fff;
    padding: 20px 0;    
    margin-bottom: 20rpx;
}
.tipTxt {
    display: block;
    padding: 20rpx 0;
    text-align: center;
}
.contact {
    width: 700rpx;
    margin: 0 auto;
    border:1rpx dashed #fd7c28;
    border-radius: 10px;
    padding: 20px 0;
    background-color: #fff;
}

.contact > view {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 20rpx 0;
}
.contact > view label {
    flex: 1;
    text-align: right;
    padding-right: 20rpx;
}
.contact > view input {
    flex: 3;
    border-bottom: 1rpx solid #ccc;
}
.btn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
}
.btn button {
    height: 100%;
}